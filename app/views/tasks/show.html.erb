<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Time:</strong>
  <%= @task.time %>
</p>

<div id="todo_items_wrapper">
	<%= render @task.task_items %>
	<div id="form">
		<%= render "tasks/form" %>
	</div>
</div>


<%= link_to 'Edit', edit_task_path(@task) %> |
